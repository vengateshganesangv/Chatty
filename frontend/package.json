{
  "name": "frontend",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@reduxjs/toolkit": "^1.9.1",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "react": "^18.2.0",
    "react-app-rewired": "^2.2.1",
    "react-dom": "^18.2.0",
    "react-loading-skeleton": "^3.1.0",
    "react-redux": "^8.0.5",
    "react-scripts": "5.0.1",
    "sass": "^1.57.1",
    "web-vitals": "^3.1.0"
  },
  "scripts": {
    "start": "react-app-rewired start",
    "lint:check": "eslint 'src/**/*.js'",
    "lint:fix": "eslint 'src/**/*.js' --fix",
    "prettier:check": "prettier --check 'src/**/*.{js,jsx,json}'",
    "prettier:fix": "prettier --write 'src/**/*.{js,jsx,json}'",
    "build": "react-app-rewired build",
    "test": "react-app-rewired test --coverage --forceExit --detectOpenHandles --watchAll=false",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "eslint": "^8.30.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^27.1.7",
    "eslint-plugin-n": "^15.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.31.11",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-simple-import-sort": "^8.0.0",
    "jest-canvas-mock": "^2.4.0",
    "msw": "^0.49.2",
    "prettier": "^2.8.1",
    "react-app-alias": "^2.2.2"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/test/*.js?(x)",
      "!**/node_modules/**"
    ],
    "coverageReporters": [
      "text-summary",
      "lcov"
    ],
    "moduleNameMapper": {
      "@components/(.*)": [
        "<rootDir>/src/components/$1"
      ],
      "@services/(.*)": [
        "<rootDir>/src/services/$1"
      ],
      "@hooks/(.*)": [
        "<rootDir>/src/hooks/$1"
      ],
      "@mocks/(.*)": [
        "<rootDir>/src/mocks/$1"
      ],
      "@pages/(.*)": [
        "<rootDir>/src/pages/$1"
      ],
      "@redux/(.*)": [
        "<rootDir>/src/redux-toolkit/$1"
      ],
      "@assets/(.*)": [
        "<rootDir>/src/assets/$1"
      ],
      "@colors/(.*)": [
        "<rootDir>/src/colors/$1"
      ],
      "@root/(.*)": [
        "<rootDir>/src/$1"
      ]
    }
  }
}
